@model EntityLayer.Concrete.Message2

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yeni Mesaj Olustur</h1>
<br />

@using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
{
    @Html.Label("Alici")
    @*@Html.TextBoxFor(x=>x.,new{@class="form-control"})*@
    <input type="text" class="form-control" />
    <br />
    @Html.Label("Konu")
    @Html.TextBoxFor(x=>x.Subject,new{@class="form-control"})
    <br />
    @Html.Label("Mesajiniz")
    @Html.TextAreaFor(x=>x.MessageDetails,15,3,new{@class="form-control"})
    <br />
    <button class="btn btn-info">Mesaj Gonder</button>
}
