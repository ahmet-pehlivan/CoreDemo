@using CoreDemo.Models
@model RoleUpdateViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Role Duzenleme Sayfasi</h1>

<form method="post">
    <div class="form-group">
        <label>Role ID</label>
        <input type="text" name="Id" value="@Model.Id" class="form-control" />
    </div>
    <div class="form-group">
        <label>Role Basligi</label>
        <input type="text" name="name" value="@Model.name" class="form-control" />
    </div>

    <button class="btn btn-success" >Rol Guncelle</button>
</form>

